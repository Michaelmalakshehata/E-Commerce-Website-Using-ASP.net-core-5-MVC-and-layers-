@model ProductUpdateViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "_AdminLayout";
    SelectList categorylist = new SelectList(ViewBag.list, "Id", "Name");
}
@section stylecss{
    <style>
        span{
            font-size:14px;
        }
    </style>
}
<section class="form-container">

   <form asp-action="UpdateProduct" asp-controller="Menu" enctype="multipart/form-data">
       <div asp-validation-summary="All" class="text-danger" style="font-size:14px;"></div>
       <input type="hidden" asp-for="Id" />
       <div class="input-group">
           <label asp-for="Name" style="font-size:15px"></label>
           <input type="text" asp-for="Name" maxlength="25" minlength="5" placeholder="enter name" class="box" autofocus>
       </div>
       <div class="input-group">
           <label asp-for="Price" style="font-size:15px"></label>
           <input type="number" asp-for="Price" min="1" class="box" >
       </div>
       <div class="input-group">
           <label asp-for="Discount" style="font-size:15px"></label>
           <input type="number" asp-for="Discount" min="1" class="box" >
       </div>
       <div class="input-group">
           <label asp-for="Detailes" style="font-size:15px"></label>
           <textarea type="text" asp-for="Detailes" maxlength="100" minlength="5" placeholder="enter detailes" class="box"></textarea>
       </div>
       <div class="input-group">
           <label asp-for="File" style="font-size:15px"></label>
           <input type="file"accept="image/*"  asp-for="File" class="box" >
           @if(@Model.imgpath1!=null)
            
                {
                    <img src="~/uploaded_img/@Model.imgpath1" style="width:124px" class="img-thumbnail" />
                }
       </div>
       <div class="input-group">
           <label asp-for="File2" style="font-size:15px"></label>
           <input type="file"accept="video/*"  asp-for="File2" class="box" >
           @if(@Model.VideoPath!=null)
            
                {
                    <video width="64" height="64" controls loop>
                        <source src="~/uploaded_img/@Model.VideoPath" type="video/mp4">
                    </video>
                }
       </div>
       <div class="input-group">
           <label style="font-size:15px;margin:5px 20px 0 0;">Category Name </label>
           <select asp-items="categorylist" asp-for="CategoryId" class="form-select" >
           </select>
       </div>
      
       <input type="submit" value="Update" class="btn btn-success mt-4" name="submit">
   </form>

</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}